pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'REMOVE_VOLUMES',
            defaultValue: true,
            description: 'Remove Docker volumes (destroys database data)'
        )
        booleanParam(
            name: 'FORCE_CLEANUP',
            defaultValue: false,
            description: 'Force remove containers even if they are running'
        )
    }

    stages {
        stage('Cleanup TinyURL Services') {
            steps {
                script {
                    echo "ğŸ§¹ Cleaning up TinyURL services..."

                    if (params.REMOVE_VOLUMES) {
                        sh '''
                            echo "ğŸ—‘ï¸ Stopping services and removing volumes..."
                            docker-compose down -v || true
                        '''
                    } else {
                        sh '''
                            echo "ğŸ›‘ Stopping services but preserving volumes..."
                            docker-compose down || true
                        '''
                    }

                    if (params.FORCE_CLEANUP) {
                        sh '''
                            echo "ğŸ’¥ Force removing containers..."
                            docker kill tinyurl-mysql tinyurl-redis tinyurl-backend tinyurl-frontend 2>/dev/null || true
                            docker rm -f tinyurl-mysql tinyurl-redis tinyurl-backend tinyurl-frontend 2>/dev/null || true
                        '''
                    }

                    sh '''
                        echo "ğŸ§½ Cleaning up unused Docker resources..."
                        docker system prune -f || true
                    '''

                    echo "âœ… Cleanup completed!"
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ¯ TinyURL services have been cleaned up'
            echo 'â–¶ï¸ You can now run the main pipeline again'
        }
    }
}